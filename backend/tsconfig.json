{
  "compilerOptions": {
    "target": "ES2020",                  // Sets the JavaScript version the code will compile to
    "module": "CommonJS",                // Node.js uses CommonJS module system
    "rootDir": "src",                    // Directory containing TypeScript code
    "outDir": "dist",                    // Output directory for compiled JavaScript code
    "strict": true,                      // Enable strict type-checking
    "esModuleInterop": true,             // Enable interoperation between CommonJS and ES modules
    "forceConsistentCasingInFileNames": true, // Ensures consistent file casing
    "skipLibCheck": true,                // Skips checking of .d.ts files for faster compilation
    "resolveJsonModule": true,           // Allow importing .json files
    "sourceMap": true,                   // Generate source maps
    "inlineSources": true,               // Include source code in the source maps
    "inlineSourceMap": false
  },
  "include": ["src/**/*"],               // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "dist"]    // Exclude unnecessary directories
}
